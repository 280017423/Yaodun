<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- application主题设置 -->
    <style name="ThemeActivity" mce_bogus="1" parent="android:Theme.Light">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Activity中切换动画 -->
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Small"></style>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="divider_line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/border_radius_with_dimensions</item>
        <item name="android:background">@color/divider_line_color</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="share_Popwindow_anim_style">
        <item name="android:activityOpenEnterAnimation">@anim/fade</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:windowEnterAnimation">@anim/fade</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/hold</item> <!-- 指定消失的动画xml -->
    </style>

</resources>